
<div class="row">
  <center>
    
    <div class="col-md-6">
      <h4>Burgers Ordered!</h4>
      <div id="burgers_ordered">

       
        {{#each burgers}}
          {{#unless devoured}}
          <form action="burger/update" method="PUT">
            <div class="input-group">
              <li class="form-control">{{id}}. {{burger_name}}</li>
                <span class="input-group-btn">
                  <button class="btn btn-danger devour-button" type="submit">Devour It?</button>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}

      </div>
    </div>


    <div class="col-md-6" class="task">
      <h4>Devoured!</h4>
      <div id="devoured">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class="input-group">
              <li class="form-control">{{this.id}}. {{this.burger_name}}</li>    
          {{/if}}
        {{/each}}
        </div>
      </div>
    </div>
  </center>
</div>